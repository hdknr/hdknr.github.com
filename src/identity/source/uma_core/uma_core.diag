seqdiag {
  default_fontsize = 16;

  User  ->   Host [ label="start to protect \nresources at Host" ] ;

  === if registration ===
  Host  =>   AM   [ label="dynamic registration", return="host credential"      ] ; 
  === endif ===

  User  <--   Host [ label="OAuth redirect" ] ;

  User  =>   AM   [ label="authenticate\n/grant issue PAT", return="code"       ] ; 

  User  ->   Host [ label="OAuth response code" ] ;

  Host  =>   AM   [ label="host\n access token\nendoint(code)", return="PAT"         ] ; 
  User  <-- Host  [ label="ready to protect" ] ;
 
  === for policy in user policies: ===
  User  ->   Host [ label="edit policies" ] ;
  Host  =>   AM   [ label="protection API(PAT)" ] ; 
  User <--   Host ;
  === endfor ===

  User  ->   Requester [ label="start to access resource" ] ;
  === if registration ===
  Requester =>   AM   [ label="dynamic registration", return="requester credential"      ] ; 
  === endif ===
  User  <--   Requester [ label="OAuth redirect" ] ; 

  User  =>   AM   [ label="authenticate\n/Please issue a grant\non RPT for Host resource", return="Authetication\nprocess"       ] ; 
  User  =>   AM   [ label="authenticate&\ngrants", return="code"       ] ; 
  
  User  ->   Requester [ label="OAuth response code" ] ;


  Requester  =>   AM   [ label="requester\n access token\n endoint(code)", return="RPT"         ] ; 

  Requester  ->  Host  [ label="resource endpoint(RPT)"             ] ;

  === if no permisson ===
  Host =>  AM          [ label="token status(PAT)",return="no permisson"      ] ;
  Host =>  AM          [ label="register permission(PAT)",return="ticket"      ] ;
  Requester   <--  Host  [ label="403:ticket"                            ] ;
  Requester   => AM    [ label="permisson endpoint(RPT,ticket,)",return="updated token" ];
  Requester  ->  Host  [ label="resource endpoint(RPT) again" ] ;
  === endif ====

  Host =>  AM          [ label="token status(PAT)",return="good token\nwith enough permission"      ] ;
  Requester <-- Host     [ label="resource" ] ;

  User  <--  Requester  [ label="some experience"                   ];
}
